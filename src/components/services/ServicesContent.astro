---
interface Props {
  title: string;
  duration: string;
  price: number;
}

const { title, duration, price } = Astro.props;

const formatter = new Intl.NumberFormat("es-CO", {
  style: "currency",
  currency: "COP",
});
const formattedPrice = formatter.format(price);
---

<article class="prose-slate w-sm md:w-prose md:prose poppins">
  <a href="/services/" title="Back to services"
    >&larr; Volver a todos los servicios</a
  >
  <h1>{title}</h1>
  <p class="text-slate text-sm md:text-base">
    Duraci√≥n del servicio: {duration}
  </p>
  <p class="text-slate">Precio: {formattedPrice}</p>
  <slot />
  <a href="/services/" title="Back to services"
    >&larr; Volver a todos los servicios</a
  >
</article>
