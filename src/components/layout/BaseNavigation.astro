---
interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: "Inicio", url: "/" },
  { name: "Agendar un servicio", url: "/services/BookService/" },
];

const socialIcons = [
  {
    name: "GitHub",
    url: "https://github.com/jeronimomayorca",
    icon: "i-uil-github",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/jeronimomayorcaar",
    icon: "i-uil-instagram",
  },
];

const { pageTitle } = Astro.props;
---

<header class="border-b-4 border-black flex justify-between p-6 items-center">
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}
  <a href="/" title="Voler al inicio">
    <p class="righteous md:text-5xl">Tu TÃ©cnico De Confianza</p>
  </a>
  <nav class="hidden md:inline-block">
    <ul class="flex gap-8 poppins">
      {
        navigationItems.map((item) => (
          <li>
            <a
              class="text-lg font-medium hover:text-green hover:underline transition-all duration-150 ease-in-out"
              href={item.url}
              title={`Ir a ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class="hover:text-green hover:underline transition-all duration-150 ease-in-out"
              target="_blank"
              title={`'Ver @jeronimomayorca on ${item.name}`}
            >
              <div class:list={[item.icon, "w-6 h-6"]} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class="md:hidden flex">
    <ul>
      <li><a href="/services/BookService">Agendar un servicio</a></li>
    </ul>
  </nav>
</header>
