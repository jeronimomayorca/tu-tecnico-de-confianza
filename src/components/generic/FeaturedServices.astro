---
import { getCollection } from 'astro:content';
import ServicesList from '@components/services/ServicesList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const services = await getCollection('services').then((services) =>
  services.slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        Servicios Destacados
      </h2>
      <div class='hidden md:block'>
        <Button href='/services/'>Explora todos nuestros servicios &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/blog/'>to blog</Button>
      </div>
    </div>
    <ServicesList services={services} />
  </Card>
</section>
