---
import Layout from './Default.astro';
import ServicesSideBar from '@components/services/ServicesSideBar.astro';
import ServicesContent from '@components/services/ServicesContent.astro';

const ogImage = new URL(`/v1/generate/og/${Astro.params.slug}.png`, Astro.url);

const { content, headings } = Astro.props;
const { title, description } = content;
---

<Layout
  title={title as string}
  description={description as string}
  ogImage={ogImage}
>
  <main class='p-6 lg:grid lg:grid-cols-3 flex justify-center'>
    <ServicesSideBar headings={headings} />
    <ServicesContent content={content}>
      <slot />
    </ServicesContent>
  </main>
</Layout>
