---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const upgrades = [
  { name: 'Amplía la Memoria RAM', url: 'https://astro.build/' },
  { name: 'Amplía el Almacenamiento', url: 'https://uno.antfu.me/' },
  {
    name: 'Coolers',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'Pantallas', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Teclados',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'Ratones', url: 'https://vercel.com' },
];
---

<Layout
  title='Inicio'
  pageTitle='Tu técnico de confianza | Inicio'
  description='Con tu técnico de confianza puedes reparar tu equipo, hacerle mantenimiento y hacer upgrades'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Agenda un manitenimiento
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
            para tu equipo y optimiza su rendimiento
            </p>
            <Button target={'_self'} href='/mantenimiento/'>
              ¿En que consiste? &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            ¿Quieres un upgrade para tu PC?
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              upgrades.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            ¿Necesitas una reparación?
          </h2>
          <p class='poppins'>
            <span class="block">¡Reparamos tu equipo!</span> Si tienes un problema de software o hardware te ayudamos a solucionarlo, a domicilio o por escritorio remoto (siempre y cuando el problema lo permita)
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
