---
import { type CollectionEntry, render, getCollection } from "astro:content";
import Layout from "@layouts/ServicesDetails.astro";

export async function getStaticPaths() {
  const servicesEntries = await getCollection("services");
  return servicesEntries.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

interface Props {
  service: CollectionEntry<"services">;
}

const { service } = Astro.props;
const { Content, headings } = await service.render();
---

<Layout title={service.data.title} headings={headings}, price={service.data.price}, duration={service.data.duration}>
  <Content />
</Layout>
